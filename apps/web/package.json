{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s typecheck build:react-router build:netlify-prepare",
    "build:react-router": "react-router build",
    "build:netlify-prepare": "node netlify/prepare.js",
    "dev": "react-router dev",
    "start": "netlify serve",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "react-router typegen && tsc --build --noEmit",
    "lint": "run-s eslint stylelint",
    "eslint": "eslint '*/**/*.{js,ts,jsx,tsx}' --fix",
    "stylelint": "stylelint '**/*.{css,scss}' --fix"
  },
  "dependencies": {
    "@netlify/functions": "2.8.2",
    "@react-router/node": "^7.0.1",
    "@repo/ui": "workspace:*",
    "isbot": "^5.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.1"
  },
  "devDependencies": {
    "@react-router/dev": "^7.0.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vite-config": "workspace:*",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^5.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "express": "^4.21.1",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^7.0.1",
    "sass": "^1.81.0",
    "tailwindcss": "^3.4.15",
    "terser": "^5.36.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
